# In diese Datei befinden sich verschiedene Befehle zum aufzeichenen von verschiedenen Komponnenten.
# CPU Auslastung in einer Datei Aufzeichnen:

for ((i=0;i<=300;i++));
do
   cat /proc/stat | head -n1 >> cputest;
done

# RAM Auslastung in einer Datei Aufzeichnen:
for ((i=0;i<=300;i++));
do
vmstat | tail +3 >> ramtest;
done

# Scheduler und CPU Auslastung in einer Datei Aufzeichnen:
for ((i=0;i<=300;i++)); 
do 
mpstat | tail +4 >> schandcpurtest; 
done

# I/Oâ€™s Auslastung in einer Datei Aufzeichnen:


# HDD, CPU, Colume Mangaer  Auslastung in einer Datei Aufzeichnen:
for ((i=0;i<=300;i++)); 
do 
pidstat | tail +3 >> virtualmemoryandcputest; 
done

# Network Controller Auslastung in einer Datei Aufzeichnen:
for ((i=0;i<=300;i++)); 
do 
nicstat | tail +3 >> networkcontrollertest; 
done

# Disk, I/0 Controller und Block Device Interface Auslastung in einer Datei Aufzeichnen:
for ((i=0;i<=300;i++)); 
do 
iostat | grep sda >> blockControllerDistTest; 
done
